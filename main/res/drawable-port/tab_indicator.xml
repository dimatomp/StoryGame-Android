<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_selected="true">
        <shape>
            <gradient android:angle="270" android:endColor="#808080" android:startColor="#C0C0C0" android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_selected="false">
        <shape>
            <gradient android:angle="270" android:endColor="#202020" android:startColor="#404040" android:type="linear" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#ffffb400" android:startColor="#fff9e700" android:type="linear" />
        </shape>
    </item>
</selector>